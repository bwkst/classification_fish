page{
  background-color: #E0ECDE;
}

.cc_mainFrame{
  background-color: #E0ECDE;
  width: 90%;
  height: 100%;
  margin: 50rpx 5% 20rpx 5%;
}

.cc_forumBlock{
  width: 100%;
  background-color: white;
  padding: 30rpx 5rpx 0rpx 5rpx;
  border-bottom: 30rpx solid #E0ECDE;
}

.cc_firstBlock{
  height: 150rpx;
  width: 90%;
  margin: 0rpx 5% 0rpx 5%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.cc_iconPhoto{
  margin: 10rpx 0rpx 0rpx 0rpx;
  width: 120rpx;
  height: 120rpx;
}

.cc_nameAndTime{
  width: fit-content;
  height: 120rpx;
  margin: 10rpx 0rpx 10rpx 50rpx;
}

.cc_userName{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin: 10rpx 0rpx 0rpx 0rpx;
  font-size: 1.1rem;
  color: teal;
  font-weight: bold;
}


.cc_postTime{
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  margin: 25rpx 0rpx 10rpx 0rpx;
  font-size: 0.6rem;
  color: #888888;
}

.cc_secondBlock{
  margin: 25rpx 2% 0rpx 2%;
  padding-bottom: 30rpx;
  border-bottom: 5rpx solid #888888;
}

.cc_content{
  padding: 0rpx 5% 0rpx 5%;
  font-size: 0.9rem;
  color: black;
  word-break: break-all;
}

.cc_thirdBlock{
  height: 100rpx;
  margin: 10rpx 3% 10rpx 3%;
  display: flex;
  justify-content: flex-start;
}

.cc_like{
  margin: 20rpx 10rpx 0rpx 30rpx;
  width: 50rpx;
  height: 50rpx;
}

.cc_likeNum{
  height: 100rpx;
  margin: 25rpx 20rpx 0rpx 20rpx;
  font-size: 1rem;
  color: black;
}